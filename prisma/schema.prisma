datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  CUSTOMER
  ADMIN
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String
  role      UserRole
  Company   Company? @relation(fields: [companyId], references: [id])
  companyId String?  @db.ObjectId
}

model Company {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  slug      String @unique
  customers User[]
}
